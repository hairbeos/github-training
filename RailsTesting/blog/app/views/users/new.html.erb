<%= form_for @user do |f| %>
	<p>
		<%= f.label :username %>
		<%= f.text_field :username %>
	</p>
	<p>
		<%= f.label :password %>
		<%= f.text_field :password %>
	</p>
	<p>
		<%= f.label :password_confirmation, "Retype Password" %>
		<%= f.text_field :password_confirmation %>
	</p>
	<%= f.submit "Sign Up" %>
<% end %>
